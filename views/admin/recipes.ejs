

<h1 class="my-4">Manage Recipes</h1>

<div class="card">
    <div class="card-header">
        <h4 class="mb-0">Recipe List</h4>
    </div>
    <div class="card-body">
        <a href="/admin/recipes/new" class="btn btn-success mb-3">Add New Recipe</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Recipe Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Created By</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% recipes.forEach((recipe, index) => { %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= recipe.name %></td>
                        <td><%= recipe.category %></td>
                        <td><%= recipe.createdBy %></td>
                        <td>
                            <a href="/admin/recipes/<%= recipe._id %>/view" class="btn btn-info btn-sm">View</a>
                            <a href="/admin/recipes/<%= recipe._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                            <form action="/admin/recipes/<%= recipe._id %>" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this recipe?');">
                                <input type="hidden" name="_method" value="DELETE">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
