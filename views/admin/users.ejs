

<h1 class="my-4">Manage Users</h1>

<div class="card">
    <div class="d-flex card-header">
        <div class="card-header">
            <h4 class="mb-0">User List</h4>
        </div>
        <div class="card-header">
            <a href="/admin/create-users">Create User</a>
        </div>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Email</th>
                    <th scope="col">Phone</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach((user, index) => { %>
                    <tr>
                        <th scope="row"><%= index + 1 %></th>
                        <td><%= user.email %></td>
                        <td><%= user.phone %></td>
                        <td>
                            <!-- Edit and Delete buttons -->
                            <a href="/admin/users/<%= user._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
                            <form action="/admin/users/<%= user._id %>/delete" method="POST" class="d-inline" >
                                <a href="/admin/users/<%= user._id %>/delete" class="btn btn-danger btn-sm">Delete</a>
                            <!-- <form action="/admin/users/<%= user._id %>/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');"> -->
                                <!-- <input type="hidden" name="_method" value="DELETE"> -->
                                <!-- <button type="submit" class="btn btn-danger btn-sm">Delete</button> -->
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</div>
